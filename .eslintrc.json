{
  "root": true,
  "ignorePatterns": ["projects/apps/**/*", "projects/libs/**/*"],
  "plugins": ["@ngx-intersection"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.cjs", "*.mjs"],
      "extends": ["plugin:@ngx-intersection/imports"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@ngx-intersection/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx", "*.cjs", "*.mjs"],
      "extends": ["plugin:@ngx-intersection/javascript"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
