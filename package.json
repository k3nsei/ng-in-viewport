{
  "name": "ng-in-viewport",
  "version": "11.0.0",
  "private": true,
  "scripts": {
    "build": "ng build",
    "build:demo": "ng build demo --prod",
    "build:example": "ng build example --prod",
    "build:lib": "ng build ng-in-viewport --prod",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "predocs": "rimraf ./docs",
    "docs": "typedoc --tsconfig ./projects/ng-in-viewport/tsconfig.lib.json --out ./docs/ ./projects/ng-in-viewport/src/index.ts && echo \"\" > ./docs/.nojekyll",
    "e2e:demo:open": "cypress open -P ./projects/demo-e2e",
    "e2e:demo:run": "cypress run -P ./projects/demo-e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "is-ci || husky install",
    "lint": "ng lint && yarn run lint:demo-e2e",
    "lint:demo": "ng lint demo",
    "lint:demo-e2e": "eslint \"projects/demo-e2e/src/**/*.{js,ts}\"",
    "lint:example": "ng lint example",
    "lint:lib": "ng lint ng-in-viewport",
    "ng": "ng",
    "start": "ng serve",
    "start:demo": "ng serve demo",
    "start:example": "ng serve example",
    "test": "jest",
    "test:demo": "jest --config=projects/demo/jest.config.js",
    "test:lib": "jest --config=projects/ng-in-viewport/jest.config.js"
  },
  "resolutions": {
    "webpack": "^5.21.1"
  },
  "dependencies": {
    "@angular/animations": "12.0.0-next.3",
    "@angular/cdk": "11.2.2",
    "@angular/common": "12.0.0-next.3",
    "@angular/compiler": "12.0.0-next.3",
    "@angular/core": "12.0.0-next.3",
    "@angular/forms": "12.0.0-next.3",
    "@angular/material": "11.2.2",
    "@angular/platform-browser": "12.0.0-next.3",
    "@angular/platform-browser-dynamic": "12.0.0-next.3",
    "@angular/router": "12.0.0-next.3",
    "intersection-observer": "0.12.0",
    "rxjs": "6.6.6",
    "tslib": "2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1200.0-next.3",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "12.0.0-next.3",
    "@angular/compiler-cli": "12.0.0-next.3",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/cypress": "1.1.3",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "all-contributors-cli": "6.20.0",
    "codecov": "3.8.1",
    "conventional-changelog-cli": "2.1.1",
    "cypress": "6.6.0",
    "eslint": "7.21.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "32.2.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "5.1.3",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "jest-preset-angular": "9.0.0-next.3",
    "lint-staged": "10.5.4",
    "markdownlint-cli2": "0.0.14",
    "ng-packagr": "12.0.0-next.3",
    "prettier": "2.2.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-packagejson": "2.2.10",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "ts-jest": "27.0.0-next.7",
    "ts-node": "9.1.1",
    "typedoc": "0.20.29",
    "typescript": "4.2.2"
  },
  "engines": {
    "node": ">=14.0.0 <16.0.0",
    "npm": ">=7.6.0",
    "yarn": "1.22.10"
  }
